<script>
    document.addEventListener("DOMContentLoaded", () => {
      const sections = document.querySelectorAll("section");
      const links = document.querySelectorAll(".mini-menu a");
      const menu = document.querySelector(".mini-menu");
      const toggleBtn = document.querySelector("#toggle-menu");
      const closeBtn = document.querySelector("#close-menu");
    
      if (!menu || !toggleBtn || !closeBtn) return;
    
      const highlightSection = () => {
        let index = sections.length;
        while (--index && window.scrollY + 100 < sections[index].offsetTop) {}
        links.forEach((link) => link.classList.remove("text-blue-500", "font-bold"));
        links[index]?.classList.add("text-blue-500", "font-bold");
      };
    
      highlightSection();
      window.addEventListener("scroll", highlightSection);
    
      const toggleMenu = () => {
        if (menu.classList.contains("invisible")) {
          menu.classList.remove("invisible", "opacity-0", "translate-y-4");
          setTimeout(() => menu.classList.add("opacity-100", "translate-y-0"), 10);
        } else {
          menu.classList.remove("opacity-100", "translate-y-0");
          setTimeout(() => {
            menu.classList.add("opacity-0", "translate-y-4", "invisible");
          }, 300);
        }
        toggleBtn.classList.toggle("hidden");
      };
    
      toggleBtn.addEventListener("click", () => {
        toggleMenu();
        toggleBtn.classList.add("scale-90");
        setTimeout(() => toggleBtn.classList.remove("scale-90"), 150);
      });
    
      closeBtn.addEventListener("click", () => {
        toggleMenu();
        closeBtn.classList.add("scale-90");
        setTimeout(() => closeBtn.classList.remove("scale-90"), 150);
      });
    
      menu.classList.remove("invisible");
      setTimeout(() => menu.classList.add("opacity-100", "translate-y-0"), 10);
      toggleBtn.classList.add("hidden");
    });
    </script>
    
    <button id="toggle-menu" class="fixed bottom-5 right-5 bg-blue-800 text-white p-3 rounded-full shadow-lg hover:bg-blue-900 transition transform">
      ☰
    </button>
    
    <div id="mini-menu" class="fixed bottom-16 right-5 bg-white shadow-xl rounded-lg p-4 space-y-2 w-48 mini-menu transition-all duration-300 opacity-0 translate-y-4 invisible">
      <button id="close-menu" class="absolute top-2 right-2 !text-gray-900 transform">✖</button>
      <a href="#greeting" class="block text-gray-700 hover:text-blue-500">Greeting</a>
      <a href="#about" class="block text-gray-700 hover:text-blue-500">About</a>
      <a href="#story" class="block text-gray-700 hover:text-blue-500">Story</a>
      <a href="#tech-stack" class="block text-gray-700 hover:text-blue-500">Tech Stack</a>
      <a href="#contribution" class="block text-gray-700 hover:text-blue-500">Contribution</a>
    </div>
    